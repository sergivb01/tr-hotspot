%>

<% include layouts/hero  %>
<% include includes/notification %>

<div class="container">
  <% include includes/currently_authed %>
  <% include includes/general_stats %>

  <h2 class="title">Queries over last 24 hours</h2>
  <section id="graph-pihole-history">
  </section>



